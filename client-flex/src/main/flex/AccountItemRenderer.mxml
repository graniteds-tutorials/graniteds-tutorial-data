<?xml version="1.0"?>

<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
        height="48">
    <s:HGroup gap="10" paddingBottom="4" paddingTop="4" paddingLeft="4" paddingRight="4">
        <s:Image source="https://www.gravatar.com/avatar/{data.gravatarUrl}?s=44"
                preliminaryWidth="44" preliminaryHeight="44"/>
        <s:VGroup gap="4">
            <s:Label text="{data.name}" fontFamily="Arial" fontSize="20"/>
            <s:Label text="{data.email}"/>
        </s:VGroup>
    </s:HGroup>
</s:ItemRenderer>
